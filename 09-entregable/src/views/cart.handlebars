{{> _header}}
<article  class="bg-gradient text-white gap-5 shadow-lg flex flex-col justify-center items-center min-h-screen">
  <h4 class="text-6xl">Your cart</h4>
  <ul class="overflow-y-auto h-96 shadow-inner shadow-lg rounded max-w-2xl">
    {{#if products.length}}
  {{#each products}}
  <div class="flex items-center justify-between mb-4 rounded bg-slate-600/75 p-1 backdrop-blur-sm">
    <div class="flex items-center">
      <img class="rounded-lg w-16 h-16 object-cover" src={{this.product.thumbnails.[0]}} alt="image of {{this.product.title}}">
      <div class="ml-4">
        <p class="font-bold text-blue-300">{{this.product.title}}</p>
        <p class="text-white max-w-md break-words">{{this.product.description}}</p>
      </div>
    </div>
    <div class="flex items-center">
      <span class="font-bold text-blue-300 mr-2">$ {{this.product.price}} x {{this.quantity}}</span>
      <button class="bg-red-600 hover:bg-red-500 text-white rounded-lg px-4 py-2" data-btn="remove" id={{this.product._id}}>Remove</button>
    </div>
  </div>
  {{/each}}
  {{else}}
    <h3 class="text-2xl"> Not products</h3>
  {{/if}}
  </ul>
  <div class="flex items-center justify-between">
    <span class="font-bold text-blue-300">Total:</span>
    <span class="font-bold text-white-700 pl-2">$ {{totalPrice}}</span>
  </div>
  <div class="flex justify-end mt-4">
    <button class="bg-green-600 hover:bg-green-500 text-white rounded-lg px-4 py-2">Checkout</button>
  </div>
</article>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src={{scriptPath}}></script>
<script src={{scriptPath2}}></script>